#include <stdio.h>
int main(){
    int r,c,i,j,total,count=0;
    printf("Enter the no of rows and columns:\n");
    scanf("%d %d",&r,&c);
    int matrix[r][c];
    printf("Enter the matrix elements:\n");
    for (i=0;i<r;i++){
        for(j=0;j<c;j++){
            scanf("%d",&matrix[i][j]);
        }
    }
    printf("Matrix is:\n");
    for(i=0;i<r;i++){
        for(j=0;j<c;j++){
            printf("%d ",matrix[i][j]);
        }
        printf("\n");
    }
    total=r*c;
    for(i=0;i<r;i++){
        for(j=0;j<c;j++){
            if(matrix[i][j]==0){
            count+=1;
            }
        }
    }
    if(count>total/2){
        printf("Matrix is Sparse.");
    }
    else{
        printf("Matrix is not Sparse.");
    }
}
